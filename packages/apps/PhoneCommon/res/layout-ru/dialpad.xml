<!-- Dialpad in the Phone app. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialpad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <include layout="@layout/dialpad_key_one" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <include
            android:id="@+id/two"
            style="@style/DialpadKeyButtonStyle"
            layout="@layout/dialpad_key_two_ru" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <include
            android:id="@+id/three"
            style="@style/DialpadKeyButtonStyle"
            layout="@layout/dialpad_key_three_ru" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <include
            android:id="@+id/four"
            style="@style/DialpadKeyButtonStyle"
            layout="@layout/dialpad_key_four_ru" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <include
            android:id="@+id/five"
            style="@style/DialpadKeyButtonStyle"
            layout="@layout/dialpad_key_five_ru" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <include
            android:id="@+id/six"
            style="@style/DialpadKeyButtonStyle"
            layout="@layout/dialpad_key_six_ru" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <include
            android:id="@+id/seven"
            style="@style/DialpadKeyButtonStyle"
            layout="@layout/dialpad_key_seven_ru" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <include
            android:id="@+id/eight"
            style="@style/DialpadKeyButtonStyle"
            layout="@layout/dialpad_key_eight_ru" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <include
            android:id="@+id/nine"
            style="@style/DialpadKeyButtonStyle"
            layout="@layout/dialpad_key_nine_ru" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <include layout="@layout/dialpad_key_star" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <include layout="@layout/dialpad_key_zero" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <include layout="@layout/dialpad_key_pound" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/three_button_height" />

</LinearLayout>