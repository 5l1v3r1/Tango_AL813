<!-- Layout used for PreferenceCategory in a PreferenceActivity. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/light_header">
<!-- HQ_guomiao 2015-10-23 modified for HQ01457247 begin -->
<TextView
    style="?android:attr/listSeparatorTextViewStyle"
    android:id="@+id/sim_slot_2"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:layout_width="46dp"
    android:layout_marginEnd="10dp"
    android:text="@string/slot_2"
/>
<TextView
    style="?android:attr/listSeparatorTextViewStyle"
    android:id="@+android:id/title"
    android:layout_centerVertical="true"
    android:layout_toStartOf="@id/sim_slot_2"
    android:gravity="center"
    android:layout_width="46dp"
    android:layout_marginEnd="10dp"
    android:text="@string/slot_1"
/>
</RelativeLayout>
