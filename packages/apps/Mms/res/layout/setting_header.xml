<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:minHeight="?android:attr/listPreferredItemHeight"
    android:cacheColorHint="@android:color/transparent"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:paddingLeft="7dip" android:paddingRight="7dip"
    android:gravity="center">
    <TextView android:id="@+id/set_default_mms_title"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:text="@string/pref_title_sms_enabled"
        android:textColor="#000000"
        style="?android:attr/textAppearanceMedium" />
    <TextView android:id="@+id/set_default_mms_summary"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        style="?android:attr/textAppearanceSmall" />
</LinearLayout>
