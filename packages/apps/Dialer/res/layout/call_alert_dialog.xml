<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/dialog_background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/rl_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="8dp" >
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="18sp" 
	    android:text="@string/hw_sim_dialog"     
    	/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"    
            android:paddingTop="15dp">
            <Button
                android:id="@+id/btn_sim_one"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:singleLine="true"
            	android:drawableLeft="@drawable/contact_dial_call_1"
             	android:background="@drawable/daier_call_btn_normal"
             	android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="14sp"
                android:ellipsize="end"
             />
            <Button
                android:id="@+id/btn_sim_two"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/contact_dial_call_2"
                android:background="@drawable/daier_call_btn_normal"
	        android:gravity="center"
                android:textColor="#FFFFFF"
                android:paddingRight="5dp"
                android:textSize="14sp"
                android:ellipsize="end"
                />
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
